# Special methods start and end with __

class Employee:

    raise_amt = 1.04

    def __init__(self, first, last, pay):
        self.first = first
        self.last = last
        self.email = first + '.' + last + '@email.com'
        self.pay = pay

    def fullname(self):
        return '{} {}'.format(self.first, self.last)

    def apply_raise(self):
        self.pay = int(self.pay * self.raise_amt)

    #information about the object for the programmer
    def __repr__(self):
        return "Employee('{}', '{}', {})".format(self.first, self.last, self.pay)

    #information about the object for the end user
    def __str__(self):
        return '{} - {}'.format(self.fullname(), self.email)

    # customize how addition works for the project
    def __add__(self, other):
        return self.pay + other.pay

    # customize how len works for this object
    def __len__(self):
        return len(self.fullname())


emp_1 = Employee('Corey', 'Schafer', 50000)

print(repr(emp_1))
print(str(emp_1))

emp_2 = Employee('Carly', 'Smith', 70000)

print(emp_1 + emp_2)
print(len(emp_1))
